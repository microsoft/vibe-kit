{
    "servers": {
        "memory": {
            // Useful for storing and retrieving context across tasks
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ],
            "env": {
                // Persist memory to a project-local file (ignored by git)
                "MEMORY_FILE_PATH": "${workspaceFolder}/.mcp-memory.json"
            }
        },
        "sequential-thinking": {
            // Useful for sequential thinking tasks
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "context7": {
            // Useful for retrieving library documentation of any framework/language in Context7 format
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp@latest"
            ],
            "type": "stdio"
        },
    }
}